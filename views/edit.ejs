<%- include("partials/header") %>

<div class="ui main container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<!-- IMPORTANT: note the action & method used -->
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>">
			<label>Yields</label>
			<div class="ui left icon input">
			  <input type="text" name="blog[yields]" value="<%= blog.yields %>">
			  <i class="pie chart basic icon"></i>
			</div>
			<label>Cook Time</label>
			<div class="ui left icon input">
			  <input type="text" name="blog[cook]" value="<%= blog.cook %>">
			  <i class="time basic icon"></i>
			</div>
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
			<label>Description</label>
			<textarea name="blog[body]"><%= blog.body %></textarea>
			<label>Ingredients</label>
			<textarea name="blog[ingredients]"><%= blog.ingredients %></textarea>
			<label>Directions</label>
			<textarea name="blog[directions]"><%= blog.directions %></textarea>
		</div>
		<input class="ui green big basic button" type="submit">
	</form>
</div>

<%- include("partials/footer") %>